@model IEnumerable<AmlShop.Models.Product>

@{
    ViewData["Title"] = "Product";
    Layout = "~/Views/Shared/_AdminLayout1.cshtml";
}

<h1>Product</h1>
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        Product Details
        <a href="../Admin/ProductAdd" class="btn btn-info pull-right fa-table fa-plus">Add New</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Sr.No</th>
                        <th>product Name</th>
                        <th>Action</th>

                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Sr.No</th>
                        <th>product Name</th>
                        <th>Action</th>

                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        int count = 1;
                        <tr>
                            <td>@count</td>
                            <td>@item.ProductName</td>
                            @*<td><a href="#">Edit</a></td>*@
                            <td> @Html.ActionLink("Edit","ProductEdit", new {productId = item.ProductId})</td>

                        </tr>
                        count++;
                    }


                </tbody>
            </table>
        </div>
    </div>
    </div>
  